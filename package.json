{
    "name": "@luolapeikko/xdr-ts",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsup src/index.ts --sourcemap --format cjs,esm --dts --clean",
        "watch": "tsup src/index.ts --sourcemap --format cjs,esm --dts --watch",
        "preinstall": "npx only-allow pnpm",
        "test": "vitest run --typecheck --coverage",
        "lint": "biome check"
    },
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "reporter": [
            "text",
            "lcovonly",
            "cobertura"
        ],
        "all": true,
        "require": [
            "ts-node/register"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@types/node": "^24.10.2",
        "@vitest/coverage-v8": "^4.0.15",
        "c8": "^10.1.3",
        "tsup": "^8.5.1",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    },
    "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501"
}
